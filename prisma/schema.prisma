generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STAFF
  GA
  COORDINATOR
  LEAD
  MANAGER
}

model User {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String?
  email       String    @unique
  password    String
  socialMedia String[]
  role        Role      @default(STAFF)
  isActive    Boolean   @default(false)
  updatedAt   DateTime?
  createdAt   DateTime  @default(now())
  isDeleted   Boolean   @default(false)

  teamLeadId  String?
  teamLead    User?   @relation("UserTeamLead", fields: [teamLeadId], references: [id])
  teamMembers User[]  @relation("UserTeamLead")

  // Relations
  approvalsRequested Approval[]          @relation("RequestedForApprovals")
  approvalsCreated   Approval[]          @relation("CreatedApprovals")
  signatures         ApprovalSignature[] // user bisa tanda tangan banyak approval
  histories          History[]           @relation("UserToHistory")

  imageId     String? @unique
  image       Upload? @relation(fields: [imageId], references: [id], onDelete: SetNull)
}

model Upload {
  id         String   @id @default(uuid())
  filename   String
  mimeType   String
  extension  String
  size       Int
  url        String
  storageKey String
  category   String?
  uploaderId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User?
}

model Category {
  id         String   @id @default(uuid())
  name       String
  prefix     String
  isDevice   Boolean   @default(false)
  updatedAt  DateTime?   
  createdAt  DateTime  @default(now())
  isDeleted  Boolean   @default(false)
  assets     Asset[]

  ApprovalAsset ApprovalAsset[]
}

model Asset {
  id            String    @id @default(uuid())
  name          String
  code          String    @unique
  isMaintenance Boolean   @default(false)
  serialNumber  String?
  image         String?
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  updatedAt     DateTime?
  createdAt     DateTime  @default(now())
  isDeleted     Boolean   @default(false)

  ApprovalAsset ApprovalAsset[]
  histories     History[]         @relation("AssetToHistory")
}

enum SubmissionType {
  PROCUREMENT
  MAINTENANCE
  WRITE_OFF
  ASSIGNMENT
}

enum RequestStatus {
  DRAFT
  WAITING_APPROVAL
  DONE
  REJECT
}

model Approval {
  id             String         @id @default(uuid())
  submissionType SubmissionType
  status         RequestStatus  @default(DRAFT)
  notes          String?

  createdById String
  createdBy   User   @relation("CreatedApprovals", fields: [createdById], references: [id])

  requestedForId String?
  requestedFor   User?   @relation("RequestedForApprovals", fields: [requestedForId], references: [id])

  assets     ApprovalAsset[]
  signatures ApprovalSignature[]
  histories  History[]           @relation("ApprovalToHistory")

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)
}

model ApprovalSignature {
  id          String      @id @default(uuid())
  email       String?
  name        String?
  image       String?
  positionX   Int?
  positionY   Int?
  signedAt    DateTime? 

  approvalId String
  approval   Approval @relation(fields: [approvalId], references: [id])

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  updatedAt DateTime?
  isDeleted Boolean   @default(false)
}

model ApprovalAsset {
  id            String   @id @default(uuid())
  name          String?
  isMaintenance Boolean? @default(false)
  serialNumber  String?
  image         String?

  categoryId    String?
  approvalId    String?
  assetId       String?

  category      Category?   @relation(fields: [categoryId], references: [id])
  approval      Approval?   @relation(fields: [approvalId], references: [id])
  asset         Asset?      @relation(fields: [assetId], references: [id])

  updatedAt DateTime?
  isDeleted Boolean   @default(false)
}

enum HistoryType {
  APPROVAL
  ASSIGNMENT
}

model History {
  id            String      @id @default(uuid())
  assetId       String?
  approvalId    String?
  type          HistoryType @default(APPROVAL)
  description   String?
  fromUserId    String?
  toUserId      String?
  performedById String?
  metadata      Json?
  createdAt     DateTime    @default(now())

  approval    Approval? @relation("ApprovalToHistory", fields: [approvalId], references: [id])
  asset       Asset?    @relation("AssetToHistory", fields: [assetId], references: [id])
  performedBy User?     @relation("UserToHistory", fields: [performedById], references: [id])

  @@index([assetId])
  @@index([approvalId])
  @@index([type])
  @@map("ApprovalHistory")
}
